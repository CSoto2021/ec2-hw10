<!DOCTYPE html>
<html>
<head>
<title>Update Students</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<%- include('partials/Navbar') %>
</head>
<body>
  
  <div class="container">
    <label for="fname">First Name:</label>
    <input type="text" id="fname" name="fname"><br><br>

    <label for="lname">Last Name:</label>
    <input type="text" id="lname" name="lname"><br><br>

    <label for="gpa">GPA:</label>
    <input type="text" id="gpa" name="gpa"><br><br>

    <label for="enroll">Enrolled:</label>
    <input type="text" id="enroll" name="enroll"><br><br>

    <label for="sid">Student_ID:</label>
    <input type="text" id="sid" name="sid"><br><br>
  
  <button onclick="updateVotes()">Update Students</button>
  <br>
  <br>
  <div id="mydiv" name="mydiv"></div>
  </div>
  <script>

    function updateVotes() {
      var fname_val = $("#fname").val();
      var lname_val = $("#lname").val();
      var gpa_val=$("#gpa").val();
      var enrolled_val=$("#enroll").val();
      var sid_val=$("#sid").val()
      var temp= "http://localhost:5678/students/"+sid_val;
      console.log(temp)
      $.ajax({
        url: temp,
        type: "put",
        data: { 
          student_id: sid_val,
          first_name:fname_val,
          last_name:lname_val,
          gpa:gpa_val,
          enrolled:enrolled_val,
        },
        success: function(response) {
          $("#mydiv").text(response.msg);
        },
        error: function(xhr) {
          $("#mydiv").text('error: ' + xhr);
        }
      });
    }
    
  </script>

</body>
</html>